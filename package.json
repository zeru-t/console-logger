{
  "name": "console-logger-z",
  "displayName": "Console Logger Tool",
  "description": "Create console log messages.",
  "version": "1.0.2",
  "publisher": "ztessema",
  "repository": "https://github.com/ztessema/console-logger",
  "engines": {
    "vscode": "^1.88.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Console Logger",
      "properties": {
        "ConsoleLogger.color": {
          "type": "string",
          "default": "cyan",
          "description": "The font color of the logged message."
        },
        "ConsoleLogger.bgColor": {
          "type": "string",
          "default": "",
          "description": "The background color of the logged message."
        },
        "ConsoleLogger.fontSize": {
          "type": "number",
          "default": 0,
          "description": "The font size of the logged message."
        },
        "ConsoleLogger.quote": {
          "type": "string",
          "enum": [
            "\"",
            "'",
            "`"
          ],
          "default": "'",
          "description": "The type of quote to use (double, single, backtick)."
        },
        "ConsoleLogger.outputTerminal": {
          "type": "string",
          "enum": [
            "console",
            "Serial"
          ],
          "default": "console",
          "description": "The output terminal to use."
        },
        "ConsoleLogger.logFunction": {
          "type": "string",
          "enum": [
            "log",
            "debug",
            "print",
            "printf",
            "println"
          ],
          "default": "log",
          "description": "The logging function to use."
        }
      }
    },
    "commands": [
      {
        "command": "ConsoleLogger.Log",
        "title": "Display Log Message",
        "icon": "$(pencil)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ConsoleLogger.Log",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
